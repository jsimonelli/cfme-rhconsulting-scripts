  EXPORT_DIR=$1

  if [ ! -d $EXPORT_DIR ]
  then
    echo "Export directory doesn't exist!"
    exit 1
  fi

  pushd /var/www/miq/vmdb
  bin/rake "rhconsulting:miq_policies:export[${EXPORT_DIR}]"
  popd
}

