  if [ ! -d $IMPORT_DIR ]
  then
    echo "Import directory doesn't exist!"
    exit 1
  fi

  pushd /var/www/miq/vmdb
  bin/rake "rhconsulting:miq_policies:import[${IMPORT_DIR}]"
  popd
}

